<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".Rating">


    <GridView
        android:id="@+id/field"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:background="@drawable/sudoku"
        android:gravity="center"
        android:numColumns="9"
        android:paddingLeft="2dp"
        android:paddingTop="4dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="-2dp"></GridView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
    android:orientation="horizontal">
    <!--        android:background="#c5718079" -->

        <Button
            android:id="@+id/btn1"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="1"
            android:layout_marginRight="5dp"
            android:textSize="15dp"
            android:padding="0dp"
            android:onClick="onClick"></Button>
        <Button
            android:id="@+id/btn2"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="2"
            android:layout_marginRight="5dp"
            android:textSize="15dp"
            android:padding="0dp"
            android:onClick="onClick"></Button>
        <Button
            android:id="@+id/btn3"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="3"
            android:layout_marginRight="5dp"
            android:textSize="15dp"
            android:padding="0dp"
            android:onClick="onClick"></Button>
        <Button
            android:id="@+id/btn4"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="4"
            android:layout_marginRight="5dp"
            android:textSize="15dp"
            android:padding="0dp"
            android:onClick="onClick"></Button>
        <Button
            android:id="@+id/btn5"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="5"
            android:layout_marginRight="5dp"
            android:textSize="15dp"
            android:padding="0dp"
            android:onClick="onClick"></Button>
        <Button
            android:id="@+id/btn6"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="6"
            android:layout_marginRight="5dp"
            android:textSize="15dp"
            android:padding="0dp"
            android:onClick="onClick"></Button>
        <Button
            android:id="@+id/btn7"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="7"
            android:layout_marginRight="5dp"
            android:textSize="15dp"
            android:padding="0dp"
            android:onClick="onClick"></Button>
        <Button
            android:id="@+id/btn8"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="8"
            android:layout_marginRight="5dp"
            android:textSize="15dp"
            android:padding="0dp"
            android:onClick="onClick"></Button>
        <Button
            android:id="@+id/btn9"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="9"
            android:textSize="15dp"
            android:padding="0dp"
            android:onClick="onClick"></Button>
    </LinearLayout>

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick_end"
        android:text="Решить судоку" />

    <Button
        android:id="@+id/ExitSolver"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:onClick="ExitSolver"
        android:text="Выйти" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"></TextView>

</LinearLayout>